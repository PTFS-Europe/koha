function getBibID(id) {

	var bibID = 0;
	// console.log("The ID is " + id);
	if( id ) {
		// for some reason there is an extra number on the end of the bibID
		// the regex stores the last unwanted digit in \$2 and the one we want
		// in \$1.
		bibID = id.replace(/^FETCH-herts_catalog_([0-9]*)([0-9])\$/, "\$1" );
		if( bibID === id ) { bibID = 0; }
	}

	console.log("The ID is now " + bibID);
	return(bibID);
}


