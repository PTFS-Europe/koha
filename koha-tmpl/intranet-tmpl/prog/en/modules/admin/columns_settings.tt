    <script>
        $(document).ready( function() {
            var accordion = $( "#modules" ).accordion({
                collapsible: true,
                autoHeight: false,
                header: "h3",
              [%- IF panel -%]
                [%# we were asked to show a specific panel, usually on update %]
                active: [%- panel | html -%]
              [%- ELSE -%]
                active: false
              [%- END -%]
            });
        });
