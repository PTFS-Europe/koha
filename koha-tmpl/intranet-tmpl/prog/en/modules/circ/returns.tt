                                                                [% IF ( transfertodo ) %]
                                                                    [% recall.patron.email | html %]
                                                                [% ELSE %]
                                                                    <a id="boremail" href="mailto:[% recall.patron.email | html %]">[% recall.patron.email | html %]</a>
