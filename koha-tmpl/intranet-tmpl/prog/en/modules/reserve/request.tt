                                            <th>Home library</th>
                                            <th>Last location</th>
                                            [% IF itemdata_ccode %]
                                                <th>Collection</th>
                                            [% END %]
                                            <th>Call number</th>
                                            <th>Copy number</th>
                                            [% IF itemdata_enumchron %]
                                                <th>Vol no.</th>
                                            [% END %]
                                            <th>Information</th>
                                            <th>Allowed pickup locations</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        [% SET selected = 0 %]
                                        [% FOREACH itemloo IN bibitemloo.itemloop %]
