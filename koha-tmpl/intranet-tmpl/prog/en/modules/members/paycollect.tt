    [% SET payment_types = [] %]
    [% FOR pt IN AuthorisedValues.GetAuthValueDropbox('PAYMENT_TYPE') %]
        [% NEXT IF pt.authorised_value.grep("^SIP[[:digit:]]{2}$").size() %]
        [% payment_types.push(pt) %]
