    <tfoot><tr><td colspan="3">Total amount outstanding:</td><td>[% amountoutstanding | format('%.2f') %]</td></tr></tfoot>
    <tbody><tr>
            <td>[% individual_description | html %]</td>
            <td>[% debit_type_code | html %]</td>
