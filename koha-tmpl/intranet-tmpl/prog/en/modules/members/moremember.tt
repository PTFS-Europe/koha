                            [% END %]

                            [% IF Koha.Preference('ArticleRequests') %]
                                [% INCLUDE 'patron-article-requests.inc' %]
                            [% END %]
                        </div> <!-- /.tab-content -->
                    </div> <!-- /div#finesholdsissues -->
                </main>
            </div> <!-- /.col-sm-10.col-sm-push-2 -->

            <div class="col-sm-2 col-sm-pull-10">
