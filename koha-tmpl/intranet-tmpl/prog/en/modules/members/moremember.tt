                                                </fieldset>
                                            </form>
                                        [% END # IF SuspendHoldsIntranet %]

                                    [% ELSE %]
                                        <p>Patron has nothing on hold.</p>
                                    [% END %]
                                </div> [% # /div#reserves %]
                            [% END %]

                            [% IF Koha.Preference('UseRecalls') %]
                                <div id="recalls" role="tabpanel" class="tab-pane">
                                    [% INCLUDE 'recalls.inc' %]
                                </div>
                            [% END %]

                            [% IF Koha.Preference('ClaimReturnedLostValue') %]
