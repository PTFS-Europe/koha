                                                </form>
                                            [% ELSE %]
                                                [% ITEM_DAT.itemnotes_nonpublic | html %]
                                            [% END %]
                                        </li>
                                    </ol> <!-- /.bibliodetails -->
                                    </div> <!-- /.rows -->
                            </div> <!-- /.listgroup -->
                        </div> <!-- /.page-section -->
                    [% END # /FOREACH ITEM_DAT %]
